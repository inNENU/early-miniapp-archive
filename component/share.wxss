/* share 组件*/

@import "../lib/animation.wxss";

.iconCtn {
  width: 40px;
  height: 40px;
  position: fixed;
  z-index: 200;
  right: 20px;
  bottom: 50px;
  background-color: #3cc51f;
  border-radius: 50%;
  box-shadow: 1px 1px 3px rgba(127, 127, 127, 0.15);
}

.iconHover {
  background-color: #32a71a;
}

.icon {
  width: 70%;
  height: 70%;
  margin: 15%;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100%;
  z-index: 201;
  background-color: rgba(0, 0, 0, 0.1);
}

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100%;
  z-index: 202;
  display: -webkit-flex;
  display: flex;
  flex-direction: column-reverse;
}

.btnList {
  width: 100%;
}

.btn {
  width: 100%;
  height: 48px;
  background-color: #fff !important;
  line-height: 2.4;
  border: none !important;
  border-radius: 0 !important;
  border-top: 1rpx #cac9ce solid !important;
}

.cancelBtn {
  width: 100%;
  height: 60px;
  border: none !important;
  background-color: #fff;
  border-radius: 0 !important;
  border-top: 8px #d9d9d9 solid !important;
}

.btnHover {
  background-color: #eee !important;
}