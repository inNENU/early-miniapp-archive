#passwordMask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100%;
  z-index: 201;
  background-color: rgba(0, 0, 0, 0.1);
}

#passwordBox {
  width: 80%;
  height: 15%;
  position: fixed;
  top: 35%;
  left: 10%;
  border-radius: 16px;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 20px;
  font-weight: 400;
  text-align: center;
  letter-spacing: 1px;
  z-index: 202;
}

.passwordHint {
  height: 26px;
  margin-bottom: 10px;
}

#passwordInput {
  position: absolute;
  top: 40%;
  z-index: -1;
  width: 0%;
  height: 0%;
  min-height: 0%;
  color: #ffffff;
}

#passwordDots {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 30px;
}

.passwordDot {
  width: 10px;
  height: 10px;
  background-color: #000000;
  border-radius: 5px;
  margin: 10px 8px;
}