.schoolMap {
  width: 100%;
  height: 100%;
}

/* point 组件*/

.pointCtn {
  position: fixed;
  bottom: 120rpx;
  left: 34rpx;
  padding: 6px;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #eee;
  border-radius: 5px;
}

.pointBtn {
  width: 25px;
  height: 25px;
}

/* scale 组件 */

.scaleLargeBtn, .scaleSmallBtn {
  position: fixed;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: -1px 3px 5px #dbdadfd3;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: 500;
}

.scaleLargeBtn {
  bottom: 240rpx;
}

.scaleSmallBtn {
  bottom: 140rpx;
}

.scaleCell {
  height: 50%;
}

.enlargeButton {
  height: 48%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22px;
  color: #888;
  font-weight: 500px;
}

/* switch组件 */

.switch {
  width: 260rpx;
  height: 70rpx;
  background-color: #fff;
  border: 1px solid #3478f7;
  border-radius: 10rpx;
}

.switchItem {
  width: 50%;
  height: 100%;
  display: inline-block;
  line-height: 70rpx;
  color: #3478f7;
}

.activeSwitch {
  background-color: #3478f7;
  color: white;
}

/* locat组件 */

.locateCtn {
  padding: 2rpx;
  border-radius: 5rpx;
}

.locateBtn {
  width: 56rpx;
  height: 56rpx;
}

/* list组件 */

.listCtn {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.listBtn {
  width: 50rpx;
  height: 50rpx;
}

.listActive {
  background-color: #3478f7;
}
