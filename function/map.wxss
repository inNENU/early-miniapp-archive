page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.wechatTab {
  position: relative;
  height: 100%;
}

.wechatNav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.wechatNavItem {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
}

.wechatNavItem.active {
  color: #1aad19;
}

.wechatNavTitle {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.wechatNavSlider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #1aad19;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.wechatTabPanel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.wechatTabContent {
  text-align: center;
}

.schoolMap {
  width: 100%;
  height: 100%;
}

.cosSwitch {
  position: fixed;
  left: 30%;
  right: 30%;
  bottom: 25px;
  border: 1px solid #fff;
  background-color: #fff;
  border-radius: 20px;
  height: 40px;
  /* display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  align-items: center; */
}

.cosSwitchItem {
  background-color: #ccc;
  display: inline-block;
  width: 50%;
  height: 100%;
}

.locateCtn {
  position: fixed;
  bottom: 30px;
  left: 25px;
  padding: 6px;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #eee;
  border-radius: 5px;
}

.locateBtn {
  width: 25px;
  height: 25px;
}

.bottomTab {
  position: fixed;
  bottom: 0px;
}

.scaleButton {
  position: fixed;
  right: 25px;
  bottom: 80px;
  height: 80px;
  width: 40px;
  border-radius: 15px;
  background-color: #fff;
}

.scaleCell {
  height: 50%;
}

.enlargeButton {
  height: 48%;
  display: flex;
  justify-content: center;
  align-items: center;
	font-size: 22px;
	color: #888;
	font-weight: 500px;
}
