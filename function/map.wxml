<map id="schoolMap" class='schoolMap' style='width:100%;height:100%;' longitude='{{map.longitude}}' latitude='{{map.latitude}}' show-location controls='{{map.controls}}' scale='{{map.scale}}' bindupdated='update' bindregionchange='regionChange'>
  <cover-view class='backBtn' style="top:{{info.statusBarHeight+5.5}}px;z-index:97;" hover-class='buttonHover' catchtap='cA' data-action='back'>
    <cover-image class='backIcon' src='/icon/back.png' />
  </cover-view>
  <cover-view class='pointCtn' hover-class='press' bindtap="">
    <cover-image class='pointBtn' src='/function/icon/point.png' />
  </cover-view>
  <cover-view class='scaleLargeBtn' hover-class='press' catchtap='scale' data-action='enlarge'>
    <cover-view>+</cover-view>
  </cover-view>
  <cover-view class='scaleSmallBtn' hover-class='press' catchtap='scale' data-action='narrow'>
    <cover-view>-</cover-view>
  </cover-view>
  <cover-view class='tab'>
    <cover-view class='locateCtn' hover-class='press' catchtap="moveToLocation">
      <cover-image class='locateBtn' src='/function/icon/locate.png' />
    </cover-view>
    <cover-view class='switch' catchtap='change'>
      <cover-view class="switchItem {{left?'activeSwitch':''}}">本部</cover-view>
      <cover-view class="switchItem {{left?'':'activeSwitch'}}">净月</cover-view>
    </cover-view>
    <cover-view class="listBtnCtn {{list?'listActive':''}}" hover-class="{{list?'active':'nomarl'}}" catchtap='showList'>
      <cover-image wx:if="{{!list}}" class='listBtn' src='/function/icon/list.png' />
      <cover-image wx:if="{{list}}" class='listBtn' src='/function/icon/list-active.png' />
    </cover-view>
  </cover-view>
  <cover-view class="closeBtn {{list?'fadeIn':'fadeOut'}}" style="top:{{info.statusBarHeight+5.5}}px;z-index:100;" hover-class='press' catchtap='showList'>
    <cover-image class='closeIcon' src='/icon/close.png' />
  </cover-view>
  <cover-view class="listCtn {{list?'moveUpIn':'moveUpOut'}}">
  </cover-view>
</map>