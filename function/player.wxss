.playerBg {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.nm .playerBg {
  background-color: #000;
}

.headerCtn {
  width: 90%;
  height: 10%;
  padding: 0 5%;
}

.songName, .songAuthor {
  color: #888;
  font-family: FZSSJW,
                 -apple-system-font,
                 "PingFang SC",
                 "Helvetica Neue",
                 Helvetica,
                 STHeiti,
                 Tahoma,
                 Simsun,
                 sans-serif !important;
}

.songName {
  font-size: 44rpx;
  margin-bottom: 20rpx;
}

.songAuthor {
  font-size: 32rpx;
}

.coverCtn {
  width: 100%;
  height: 50%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}

.progressBarCtn {
  width: 94%;
  height: 7.5%;
  padding: 0 3%;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.timeDisplay {
  width: 8%;
  font-size: 15px;
  color: #999;
}

.progressBar {
  width: 84%;
  margin: 10px;
}

slider {
  width: 100%;
}

.playerCtn {
  width: 90%;
  height: 12.5%;
  padding: 0 5%;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buttonCtn {
  width: 70rpx;
  height: 70rpx;
}

.buttonCtn2 {
  width: 100rpx;
  height: 100rpx;
}

.playBtn, .cycleBtn, .previousBtn, .nextBtn, .listBtn {
  width: 100%;
  height: 100%;
  -webkit-filter: drop-shadow(-1px 3px 5px rgba(191, 190, 195, 0.95));
  filter: drop-shadow(-1px 3px 5px rgba(191, 190, 195, 0.95));
}

.cycleBtn2 {
  width: 80%;
  height: 80%;
  margin: 10%;
}

.active {
  -webkit-filter: grayscale(50%);
  filter: grayscale(50%);
}
