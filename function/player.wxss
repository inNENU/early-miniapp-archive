.playerBg {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.nm .playerBg {
  background-color: #000;
}

.headerCtn {
  width: 90%;
  height: 10%;
  padding: 0 5%;
}

.songName, .songAuthor {
  color: #888;
  font-family: FZSSJW,
                 -apple-system-font,
                 "PingFang SC",
                 "Helvetica Neue",
                 Helvetica,
                 STHeiti,
                 Tahoma,
                 Simsun,
                 sans-serif !important;
}

.songName {
  font-size: 44rpx;
  margin: 20rpx auto;
}

.songAuthor {
  font-size: 32rpx;
}

.coverCtn {
  width: 100%;
  height: 50%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}

.progressBar {
  width: 90%;
  height: 7.5%;
  padding: 0 5%;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

slider {
  width: 100%;
}

.playerCtn {
  width: 90%;
  height: 7.5%;
  padding: 0 5%;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buttonCtn {
  width: 70rpx;
  height: 70rpx;
}

.buttonCtn2 {
  width: 90rpx;
  height: 90rpx;
}

.playBtn {
  width: 99%;
  height: 99%;
  -webkit-filter: drop-shadow(-1px 3px 5px #dbdadfd3);
  filter: drop-shadow(-1px 3px 5px #dbdadfd3);
}

.cycleBtn, .previousBtn, .nextBtn, .listBtn {
  width: 100%;
  height: 100%;
  -webkit-filter: drop-shadow(-1px 3px 5px #dbdadfd3);
  filter: drop-shadow(-1px 3px 5px #dbdadfd3);
}

.active {
  -webkit-filter: grayscale(50%);
  filter: grayscale(50%);
}
