.headerCtn {
  width: 90%;
  height: 10%;
  padding: 0 5%;
}

.songName,
.songAuthor {
  color: #888;
  font-family: FZSSJW,
    -apple-system-font,
    "PingFang SC",
    "Helvetica Neue",
    Helvetica,
    STHeiti,
    Tahoma,
    Simsun,
    sans-serif !important;
}

.songName {
  font-size: 44rpx;
  margin-bottom: 20rpx;
}

.songAuthor {
  font-size: 32rpx;
}

@media (min-width:480px) {
  .songName {
    font-size: 44px !important;
  }

  .songAuthor {
    font-size: 32px !important;
  }
}

.coverCtn {
  width: 100%;
  height: 50%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover {
  width: 500rpx;
  max-width: 400px;
  height: 500rpx;
  max-height: 400px;
  border-radius: 50%;
}

.progressBarCtn {
  width: 94%;
  height: 7.5%;
  padding: 0 3%;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.timeDisplay {
  width: 10%;
  font-size: 15px;
  color: #999;
}

.progressBar {
  width: 80%;
  margin: 10px 15px;
}

slider {
  width: 100%;
}

.playerCtn {
  width: 90%;
  height: 12.5%;
  padding: 0 5%;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buttonCtn {
  width: 70rpx;
  max-width: 40px;
  height: 70rpx;
  max-height: 40px;
}

.buttonCtn2 {
  width: 100rpx;
  max-width: 56px;
  height: 100rpx;
  max-height: 56px;
}

.playBtn,
.cycleBtn,
.previousBtn,
.nextBtn,
.listBtn {
  width: 100%;
  height: 100%;
  -webkit-filter: drop-shadow(-1px 3px 3px rgba(191, 190, 195, 0.95));
  filter: drop-shadow(-1px 3px 3px rgba(191, 190, 195, 0.95));
}

.cycleBtn2 {
  width: 80%;
  max-width: 32px;
  height: 80%;
  max-height: 32px;
  margin: 10%;
  -webkit-filter: drop-shadow(-1px 3px 3px rgba(191, 190, 195, 0.95));
  filter: drop-shadow(-1px 3px 3px rgba(191, 190, 195, 0.95));
}

.active {
  -webkit-filter: grayscale(50%);
  filter: grayscale(50%);
}