<view class="{{nm?'nm':''}} playerBg">
  <view style='height:10%;'></view>
  <view class='headerCtn'>
    <view class='backBtn' style="top:{{info.statusBarHeight+5.5}}px;" hover-class='buttonHover' catchtap='cA' data-action='back'>
      <image class='backIcon' src='/icon/back.svg' />
    </view>
    <view class='songName'>{{songName}}</view>
    <view class='songAuthor'>—— {{songAuthor}} ——</view>
  </view>
  <view class="coverCtn">
    <image class="cover {{musicPlay?'rotate':''}}" src="{{cover}}" />
  </view>
  <view class='progressBar'>
    <view class='timeDisplay'>{{presentMinute?presentMinute:"--"}}:{{presentSecond?presentSecond:"--"}}</view>
    <slider min='0' max='{{songLength*100}}' step='1' value="{{currentTime*100}}" block-size='15' backgroundColor='e9e9e9' selected-color='#27C087' block-color="#27C087" bindchange='drag' bindchanging='drag' />
    <view class='timeDisplay'>{{totalMinute?totalMinute:"--"}}:{{totalSecond?totalSecond:"--"}}</view>
  </view>
  <view wx:if="{{nm}}" class='playerCtn'>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='cycleBtn' src='/function/icon/orderPlay.svg' />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='previousBtn' src='/function/icon/previousSong.svg' />
    </view>
    <view wx:if="{{canplay}}" class='buttonCtn2' hover-class='active' hover-start-time='0' hover-stay-time='50' catchtap='play'>
      <image class='playBtn' src="{{musicPlay?'/function/icon/pause.svg':'/function/icon/play.svg'}}" />
    </view>
    <view wx:else class='buttonCtn2' hover-class='active'>
      <image class='playBtn' src="/function/icon/loading.svg" />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='nextBtn' src='/function/icon/nextSong.svg' />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='listBtn' src='/function/icon/musicList.svg' />
    </view>
  </view>
  <view wx:if="{{!nm}}" class='playerCtn'>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='cycleBtn' src='/function/icon/orderPlay.svg' />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='previousBtn' src='/function/icon/previousSong.svg' />
    </view>
    <view wx:if="{{canplay}}" class='buttonCtn2' hover-class='active' hover-start-time='0' hover-stay-time='50' catchtap='play'>
      <image class='playBtn' src="{{musicPlay?'/function/icon/pause.svg':'/function/icon/play.svg'}}" />
    </view>
    <view wx:else class='buttonCtn2' hover-class='active'>
      <image class='playBtn' src="/function/icon/loading.svg" />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='nextBtn' src='/function/icon/nextSong.svg' />
    </view>
    <view class='buttonCtn' hover-class='active' hover-start-time='0' hover-stay-time='50'>
      <image class='listBtn' src='/function/icon/musicList.svg' />
    </view>
  </view>
  <view style='height:10%;'></view>
</view>
