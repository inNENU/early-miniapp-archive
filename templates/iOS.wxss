/* ---iOS theme made by Mr.Hope--- */

.iOS {
  width: 100%;
  min-height: 100%;
  text-align: center;
  background-color: #fff;
}

.iOS.grey {
  background-color: #efeef4;
}

.nm.iOS.grey {
  background-color: #10110b;
  color: #fff;
}

/* iOS Head */

.iOS-navigationBar, .iOS-navPlaceHolder {
  width: 100%;
  background-color: #f5f5f7;
  text-align: center;
}

.iOS-navigationBar {
  height: 44px;
  padding-top: 20px;
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 99;
}

.iOS-navPlaceHolder {
  height: 64px;
  font-size: 10px;
  color: #acacb0;
}

.nm .iOS-navigationBar, .nm .iOS-navPlaceHolder {
  background-color: #0a0a08;
}

.nm .iOS-navPlaceHolder {
  color: #555;
}

.iOS-navBack {
  min-width: 0 !important;
  min-height: 0 !important;
  padding: 0 5px !important;
  border: none !important;
  background-color: rgba(0, 0, 0, 0);
  margin: 0 3%;
  line-height: 2.4;
  position: relative;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  z-index: 101;
}

.iOS-backArrow {
  width: 12px;
  height: 12px;
  border-width: 0 0 3px 3px;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  border-color: #3478f7;
}

.iOS-nav-text {
  color: #3478f7;
  font-size: 16px;
  z-index: 101;
}

.iOS-titletext {
  width: 100%;
  position: absolute;
  font-size: 17px;
  font-weight: 500;
  z-index: 100;
}

.iOSnavDl {
  width: 100%;
  height: 0;
  position: fixed;
  top: 64px;
  z-index: 100;
}

.iOSnavDl, .iOS-head {
  border-bottom: 1rpx #acacb0 solid;
}

.nm .iOSnavDl, .nm .iOS-head {
  border-bottom: 1rpx #53534f solid;
}

.iOS-head {
  padding: 3px 5%;
  text-align: left;
  font-size: 34px;
  font-weight: 500;
  background-color: #f4f4f4;
}

.nm .iOS-head {
  background-color: #0c0c0c;
}

/* iOS content */

.iOSH3, .iOShead {
  text-align: left;
  font-weight: 500;
  padding: 12px 5% 4px 5%;
}

.iOSH3 {
  min-height: 24px;
  font-size: 22px;
}

.iOShead {
  min-height: 20px;
  font-size: 19px;
}

.grey .iOShead {
  font-size: 13px;
  min-height: 9px;
  font-weight: 400;
  color: #666;
  padding: 23px 15px 5px 15px;
}

.grey.nm .iOShead {
  color: #999;
}

.iOSH3 +.iOShead, .iOSH3 +.iOSH3 {
  padding-top: 2px;
}

.iOSP {
  font-size: 16px;
  padding: 0 15px;
  line-height: 1.6;
  text-align: justify;
}

.grey .iOSP {
  font-size: 17px;
  padding: 10px 15px;
  line-height: 1.6;
  text-align: left;
  background-color: #fefefe;
  border-top: 1rpx #cac9ce solid;
  border-bottom: 1rpx #cac9ce solid;
}

.grey.nm .iOSP {
  border-color: #353631;
}

.iOS-img {
  width: 90% !important;
  margin: 4px 5%;
  border-radius: 16rpx;
}

.iOSImgError {
  width: 90%;
  height: 400rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 4px 5%;
  border-radius: 16rpx;
  background-color: #cac9ce;
  color: #888;
}

.iOSN {
  font-size: 12px;
  font-weight: 300;
  margin-top: -2px;
  margin-bottom: 4px;
  text-align: center;
  color: #222;
}

.nm .iOSN {
  color: #ddd;
}

.nm.iOS, .nm .iOSP {
  background-color: #000;
  color: #fff;
}
