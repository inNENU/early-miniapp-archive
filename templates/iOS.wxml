<!-- iOS theme -->
<template name="iOShead">
  <view class='iOS-navigationBar' style="{{item.iPhoneX?'padding-top:46px;height:40px':''}}">
    <view wx:if="{{item.titleDisplay}}" class="iOS-titletext">{{item.title}}</view>
    <button wx:if="{{!item.top}}" class='iOS-navBack' hover-class="iOSnavBackHover" plain='true' bindtap='back'>
      <view class='iOS-backArrow'></view>
      <text class='iOS-nav-text'>{{item.backText}}</text>
    </button>
  </view>
  <view wx:if="{{item.borderDisplay}}" class='iOSnavDl' style="{{item.iPhoneX?'top:86px;':''}}"></view>
  <view class='iOS-navPlaceHolder' style="{{item.iPhoneX?'height:86px':''}}">
    <text>到头啦~人家被你拉得好痛阿(*´д`*) 不许你再拉人家~╭(╯^╰)╮</text>
  </view>
  <view class='iOS-head'>
    <text>{{item.title}}</text>
  </view>
</template>

<template name='iOSh2'>
  <view class='iOSH2'>{{item.text}}</view>
</template>

<template name='iOSh3'>
  <view class='iOSH3'>{{item.text}}</view>
</template>

<template name='iOSp'>
  <view class='iOSP'>
    <text>{{item.text}}</text>
  </view>
</template>

<template name='iOSn'>
  <view class='iOSN'>
    <text>{{item.text}}</text>
  </view>
</template>

<template name='iOSlist'>
  <view class='iOSLctn'>
    <block wx:for-items="{{item.content}}" wx:for-item="List" wx:key="{{item.text}}">
      <navigator wx:if='{{List.url}}' class="iOS-listCtn" url='{{List.url}}'>
        <!-- <view>此处插入icon</view> -->
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption {{List.url?'iOSaccess':''}}"> {{List.desc}} </view>
        </view>
      </navigator>
      <view wx:if='{{!List.url && !List.pickerValue}}' class="iOS-listCtn {{List.switchchange?'iOS-switchList':''}}">
        <!-- <view>此处插入icon</view> -->
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption">{{List.desc}}
            <switch wx:if='{{List.switchchange}}' checked='{{List.checked}}' bindchange="{{List.switchchange}}" />
          </view>
        </view>
      </view>
      <view wx:if='{{List.pickerValue}}' class="iOS-listCtn {{List.display?'':''}}" bindtap='{{List.tap}}'>
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption">
            <block wx:for='{{List.value}}'>{{item.value}}{{item.name}}</block>
          </view>
        </view>
      </view>
      <block wx:if='{{List.display}}'>
        <view class='iOS-link-divline'></view>
        <picker-view indicator-class='iOSpickSelected' class='iOSpickerViewCtn' value="{{List.currentValue}}" bindchange="{{List.pickerchange}}">
          <block wx:for='{{List.pickerValue}}'>
            <picker-view-column class='iOSpick-view-column'>
              <view wx:for="{{item}}" class='iOSpickColumn'>{{item}}</view>
            </picker-view-column>
          </block>
           <!-- <picker-view-column class='iOSpick-view-column'>
            <view wx:for="{{List.pickerValue[1]}}" class='iOSpickColumn'>{{item}}分</view>
          </picker-view-column>  -->
        </picker-view>
      </block>
      <view class='iOS-link-divline'></view>
    </block>
  </view>
</template>

<template name='iOSimg'>
  <image class='iOS-img' mode="{{item.imgMode}}" src="{{item.src}}" />
</template>