<template name="wechathead">
  <view class='wechat-navigationBar' style="{{item.iPhoneX?'padding-top:62px;height:45px;':''}}">
    <view class="wechat-titletext">{{item.title}}</view>
    <button wx:if="{{!item.top}}" class='wechat-navBack' hover-class="navBackHover" plain='true' bindtap='back'>
      <view class='wechat-backArrow'></view>
    </button>
  </view>
  <view class='wechat-navPlaceHolder' style="{{item.iPhoneX?'height:83px;':''}}">
    <text>到头啦~人家被你拉得好痛阿(*´д`*) 不许你再拉人家~╭(╯^╰)╮</text>
  </view>
  <view wx:if="{{item.desc}}" class="wechat-head">
    <view class=".wechat-title">{{item.title}}</view>
    <view wx:if="{{item.desc}}" class="wechat-desc">{{item.desc}}</view>
  </view>
</template>

<template name='wechath3'>
  <view class='wechatH3'>{{item.text}}</view>
</template>

<template name='wechatp'>
  <view wx:if="{{item.head!==false}}" class='wechathead'>{{item.head}}</view>
  <view class='wechatP'>
    <text>{{item.text}}</text>
  </view>
  <image wx:if="{{item.src}}" class='wechat-img' lazy-load="true" mode="aspectFill" src="{{item.src}}" />
</template>

<template name='wechatlist'>
  <view wx:if="{{item.head!==false}}" class='wechathead'>{{item.head}}</view>
  <view class='iOSLctn'>
    <block wx:for-items="{{item.content}}" wx:for-item="List" wx:key="{{item.text}}">
      <navigator wx:if='{{List.url}}' class="iOS-listCtn" url='{{List.url}}'>
        <!-- <view>此处插入icon</view> -->
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption {{List.url?'iOSaccess':''}}"> {{List.desc}} </view>
        </view>
      </navigator>
      <view wx:if='{{!List.url && !List.pickerValue}}' class="iOS-listCtn {{List.Switch?'iOS-switchList':''}}">
        <!-- <view>此处插入icon</view> -->
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption">{{List.desc}}
            <switch wx:if='{{List.Switch}}' checked='{{List.checked}}' bindchange="{{List.Switch}}" />
          </view>
        </view>
      </view>
      <view wx:if='{{List.pickerValue}}' class="iOS-listCtn" bindtap='{{List.tap}}'>
        <view class='iOS-list-Container'>
          <view class='iOSLinkText'>{{List.text}}</view>
          <view class="iOS-linkDesciption">
            <block wx:for='{{List.value}}'>{{item}}</block>
          </view>
        </view>
      </view>
      <block wx:if='{{List.display}}'>
        <view class='iOS-link-divline'></view>
        <picker-view indicator-class='iOSpickSelected' class='iOSpickerViewCtn' value="{{List.currentValue}}" bindchange="{{List.picker}}">
          <block wx:for='{{List.pickerValue}}' wx:key="*this">
            <picker-view-column class='iOSpick-view-column'>
              <view wx:for="{{item}}" wx:key="*this" class='iOSpickColumn'>{{item}}</view>
            </picker-view-column>
          </block>
        </picker-view>
      </block>
      <view class='iOS-link-divline'></view>
    </block>
  </view>
  <view wx:if="{{item.foot!==false}}" class='iOSfoot'>{{item.foot}}</view>
</template>


<template name='wechatimg'>
  <view wx:if="{{item.error}}" class='imgError'>
    <icon type="warn" style='margin-right:5px;' />
    <text class='grey'>图片加载失败</text>
  </view>
  <view wx:elif="{{!item.load}}" class='imgError'>
    <image class='loadingImg' mode="{{item.imgMode}}" src="/image/loading.svg" />
    <text class='grey'>加载中...</text>
  </view>
  <image id="{{item.id}}" class='wechat-img' style="{{item.load?'':'display:none;'}}" mode="{{item.imgMode}}" lazy-load="{{item.lazy!==false}}" src="{{item.src}}" bindload="img" binderror="img" bindtap="img" />
  <view wx:if="{{item.text}}" class='wechatN'>
    <text>▲{{item.text}}</text>
  </view>
</template>

