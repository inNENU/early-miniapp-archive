/* NENU theme made by MrHope */

.NENU, .NENUgrey {
  min-height: 100%;
}

.NENUnav, .NENUnav2 {
  width: 100%;
  position: fixed;
  display: -webkit-flex;
  display: flex;
  background-color: #5ab879;
  justify-content: center;
  align-items: center;
  color: #fff;
  z-index: 999;
}

.NENUnav {
  height: 40px;
  padding: 2px 0;
  border-bottom: 1rpx solid #efeef4;
}

.NENU-navText {
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.NENUTitle {
  position: absolute;
  max-width: 60%;
  padding: 3px 6px;
  color: #fff;
  font-size: 18px;
  line-height: 1.5;
  background-color: #00000026;
  border-radius: 15px;
  border: 1rpx solid #ffffff26;
}

.NENU .NENUH3 {
  font-size: 18px;
  font-weight: 500;
  margin-left: 5%;
}

.NENUgrey .NENUH3 {
  font-size: 14px;
  margin-left: 5%;
}

.NENUP {
  padding: 0 5%;
}

.NENUInfoCtn {
  width: 100%;
  height: 600rpx;
  display: -webkit-flex;
  display: flex;
}

.NENUInfoHead {
  position: absolute;
  width: 100%;
  height: 280rpx;
}

.NENUnickCtn {
  position: absolute;
  margin: 100rpx auto auto 100rpx;
  display: flex;
}

.NENUnickHead {
  width: 180rpx;
  height: 180rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
}

.NENUnickname {
  font-size: 19px;
  color: #fff;
}

.NENULoginBtn {
  position: relative;
  width: 60%;
  height: 100rpx;
  top: 230rpx;
  border: 1rpx solid #ccc, 1rpx solid #fff;
  border-radius: 10px;
}
