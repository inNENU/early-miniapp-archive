/* wechat theme */

/* 导航 */

.wechat-navigationBar {
  width: 100%;
  height: 44px;
  padding-top: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 99;
}

.false .wechat-navigationBar {
  background-color: #f8f8f8;
}

.true .wechat-navigationBar {
  background-color: #080808;
}

.wechat-navtext {
  position: absolute;
  font-size: 30rpx;
  color: black;
  text-align: center;
  font-weight: 500;
  z-index: 100;
}

.true .wechat-navtext {
  color: white;
}

.wechat-navPlaceHolder {
  width: 100%;
  height: 64px;
  display: flex;
  position: relative;
  justify-content: center;
  font-size: 16rpx;
}

.false .wechat-navPlaceHolder {
  color: #d9d9d9;
  background-color: #09bb07;
}

.true .wechat-navPlaceHolder {
  color: #262626;
  background-color: #0c0c0c;
}

