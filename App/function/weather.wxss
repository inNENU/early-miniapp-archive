.weatherCtn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.location {
  margin-top: 30px;
  font-size: 48rpx;
  font-weight: 500;
}

.temperature {
  margin-top: 20px;
  font-size: 72rpx;
  font-weight: 600;
}

.type {
  margin-top: 16px;
  font-size: 32rpx;
}

.desc {
  margin: 16px 15%;
  font-size: 15rpx;
  text-align: justify;
  color: #666;
  line-height: 1.2;
}

.weatherListTitle {
  font-size: 36rpx;
  padding: 4px 0;
}

.weatherListDetail {
  font-size: 30rpx;
}