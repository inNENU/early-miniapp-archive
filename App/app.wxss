/* donate */

.donateCtn {
  width: 100%;
  position: fixed;
  bottom: 20px;
}

.donateButton {
  width: 60%;
  margin: 0 auto;
  padding: 10px;
  text-align: center;
  line-height: 1.6;
  background-color: #09bb07;
  border: none;
  border-radius: 5px;
  color: #fff;
}

/* common */

.buttonHover {
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.nm .buttonHover {
  background-color: rgba(255, 255, 255, 0.1) !important;
  opacity: 0.7 !important;
}

.pressHover {
  background-color: #eee !important;
}

.divLine1 {
  width: 100%;
  height: 0px;
  border-bottom: 1rpx #cac9ce solid;
}

.Grey {
  color: grey;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
  border-top: 1rpx #d9d9d9 solid;
}

.flexbox {
  width: 100%;
  display: -webkit-flex;
  display: flex;
}

.hide {
  display: none;
}

@keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.rotate {
  -webkit-animation: 9.5s linear 0s normal none infinite rotate;
  animation: 9.5s linear 0s normal none infinite rotate;
}