.phoneCtn {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding: 0 15px;
  line-height: 2.5;
  background-color: #fefefe;
}

.phoneIcon {
  width: 24px;
  height: 24px;
  margin-right: 15px;
}

.phoneCallCtn,
.phoneCall {
  width: 32px;
  height: 32px;
}

.phoneAddCtn,
.phoneAdd {
  width: 28px;
  height: 28px;
}

.phoneCallCtn,
.phoneAddCtn {
  border-radius: 12px;
  margin: 0 4px;
}

.phoneNum {
  font-size: 20px;
  font-weight: 400;
  flex: 1 1 auto;
  text-align: left;
}

.nm .phoneCtn {
  background-color: #1C1C1E !important;
  color: #fff !important;
}