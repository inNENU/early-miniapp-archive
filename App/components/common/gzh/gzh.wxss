.gzhCtn {
  width: 90%;
  margin: 12px auto;
  border-radius: 16rpx;
  text-align: left;
  overflow: hidden;
  box-shadow: 1px 1px 2px 3px rgba(191, 192, 195, 0.15);
  max-width: 517px;
}

.nm .gzhCtn {
  box-shadow: 1px 1px 2px 3px rgba(64, 63, 60, 0.15);
}

.gzhImgCtn {
  width: 100%;
  height: 290rpx;
  max-height: 220px;
}

.gzhImg {
  width: 100% !important;
  height: 100% !important;
}

.gzhText {
  background-color: #fff;
  padding: 12px 5%;
  margin: 0;
}

.nm .gzhText {
  background-color: #1C1C1E;
}

.gzhTitle {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: 8px;
}

.gzhDesc {
  color: #666;
  font-size: 15px;
}

.nm .gzhDesc {
  color: #999;
}

.gzhIconCtn {
  float: right;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.gzhIcon {
  width: 36px;
  height: 36px;
}

.gzhIconDesc {
  font-size: 14px;
  color: #888;
  margin: 2px auto;
}

@media (min-width:480px) {
  .gzhTitle {
    font-size: 20px;
    font-weight: 400;
    margin-bottom: 10px;
  }

  .gzhDesc {
    font-size: 18px;
  }

  .gzhIcon {
    width: 40px;
    height: 40px;
  }

  .gzhIconDesc {
    font-size: 16px;
  }
}