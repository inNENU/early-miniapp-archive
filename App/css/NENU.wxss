/* ---NENU theme made by MrHope--- */

.NENU {
  width: 100%;
  min-height: 100%;
  color: #000;
  background-color: #fff;
  font-family: "Helvetica Neue",
    FZSSJW,
    -apple-system-font,
    "PingFang SC",
    "Helvetica Neue",
    Helvetica,
    STHeiti,
    Tahoma,
    Simsun,
    sans-serif !important;
}

.NENU.grey {
  background-color: #f0f0f0;
}

.nm.NENU {
  color: #fff;
  background-color: #000;
}

.nm.NENU.grey {
  background-color: #0f0f0f;
}

/* NENU nav */

.NENUnav,
.NENUnav2 {
  width: 100%;
  position: fixed;
  display: -webkit-flex;
  display: flex;
  background-color: #5ab879;
  justify-content: center;
  align-items: center;
  color: #fff;
  z-index: 99;
}

.NENUnav {
  box-sizing: content-box;
  height: 40px;
  padding: 2px 0;
  border-bottom: 1rpx solid #efeef4;
  justify-content: flex-start;
}

.nm .NENUnav {
  border-color: #10110b;
}

.NENU-navText {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.NENUNavTitle {
  position: absolute;
  max-width: 60%;
  padding: 6.5px 9px;
  color: #fff;
  font-size: 18px;
  line-height: 1;
  background-color: rgba(0, 0, 0, 0.15);
  border-radius: 17px;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.NENUHead .backIcon {
  color: #000;
}

.nm .NENUHead .backIcon {
  color: #fff;
}

/* paragraph */

.NENUTitle,
.NENUhead,
.NENUP {
  text-align: left;
}

.NENUTitle {
  font-size: 18px;
  min-height: 24px;
  font-weight: 500;
  padding: 9px 5% 3px 5%;
}

.NENUTitle+.NENUTitle {
  padding-top: 2px;
}

.NENUTitle+.NENUhead {
  padding-top: 5px;
}

.NENUhead {
  font-size: 17px;
  font-weight: 500;
  padding: 9px 5% 3px 5%;
}

.grey .NENUhead {
  font-size: 13px;
  min-height: 37px;
  padding: 23px 5% 5px 5%;
  color: #666;
}

.nm.grey .NENUhead {
  color: #999;
}


.NENUP .iOS-img {
  width: 100% !important;
}

.NENUInfoCtn {
  width: 100%;
  height: 600rpx;
  display: -webkit-flex;
  display: flex;
}

.NENUInfoHead {
  position: absolute;
  width: 100%;
  height: 280rpx;
}

.NENUnickCtn {
  position: absolute;
  margin: 100rpx auto auto 100rpx;
  display: flex;
}

.NENUnickHead {
  width: 180rpx;
  height: 180rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
}

.NENUnickname {
  font-size: 19px;
  color: #fff;
}

.NENULoginBtn {
  position: relative;
  width: 60%;
  height: 100rpx;
  top: 230rpx;
  border: 1rpx solid #ccc, 1rpx solid #fff;
  border-radius: 10px;
}

/* grid */

.gridHead {
  font-size: 14px;
  color: #999;
  text-align: left;
  font-weight: 500;
  min-height: 37px;
  padding: 23px 15px 5px 15px;
}

.gridCtn {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  position: relative;
}

.gridCtn:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #cac9ce;
  top: 0;
  border-top: 1px solid #cac9ce;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.4);
  transform: scaleY(0.4);
}

.nm .gridCtn {
  background-color: #1C1C1E;
}

.nm .gridCtn:before {
  border-color: #3D3D41
}

.gridBox {
  width: 25%;
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  border-radius: 0 !important;
  line-height: 1.6 !important;
  position: relative;
}

.gridBox:before,
.gridBox:after {
  content: " ";
  position: absolute;
  right: 0;
  bottom: 0;
  color: #cac9ce;
}

.gridBox:before {
  top: 0;
  width: 1px;
  border-right: 1px solid #cac9ce !important;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.4);
  transform: scaleX(0.4);
}

.gridBox:after {
  left: 0;
  height: 1px;
  border-bottom: 1px solid #cac9ce !important;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.4);
  transform: scaleY(0.4);
}

.nm .gridBox:before,
.nm .gridBox:after {
  border-color: #3D3D41 !important;
}

.gridIcon {
  width: 44px;
  height: 44px;
  margin-top: 16px;
}

.gridTitle {
  font-size: 16px;
  color: #444;
  margin-bottom: 6px;
}

.nm .gridTitle {
  color: #bbb;
}

.gridFoot {
  font-size: 14px;
  color: #999;
  text-align: left;
  padding: 3px 15px;
  min-height: 8px;
}

.nm .gridFoot {
  color: #666;
}

@media (min-width:480px) {
  .gridBox {
    width: 16.666%;
  }
}

@media (min-width:1024px) {
  .gridBox {
    width: 12.5% - 1rpx;
  }
}