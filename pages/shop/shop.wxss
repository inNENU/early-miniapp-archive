.shopSwiper {
  width: 100%;
  height: 160px;
}

.shopImg {
  width: 100% !important;
  /* height: 100% !important; */
}

.goodCtn {
  background-color: #f8f8f8;
}

.goodLeftCtn {
  margin-right: 0.3%;
}

.goodRightCtn {
  margin-left: 0.3%;
}

.goodLeftCtn, .goodRightCtn {
  display: inline-block;
  width: 49.7%;
  height: 240px;
  background-color: #fff;
  margin-top: 2px;
  margin-bottom: 2px;
}

.goodImg {
  width: 100%;
  height: 140px;
}

.goodDetail {
  height: 100px;
  text-align: left;
}

.goodName {
  margin: 4px 10px;
  /* font-size: 16px; */
}

.goodDesc, .goodTagCtn {
  color: #888;
  margin: 0 10px;
}

.goodDesc {
  font-size: 14px;
}

.goodTagCtn {
  font-size: 8px;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.goodTag {
  background-color: #eee;
  padding: 2px 6px;
  border-radius: 8px;
  margin: 2px;
}

.wechatSearchBar {
  text-align: left;
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
