<view class="page__bd">
  <view class="wechatTab">
    <view class="wechatNav">
      <block wx:for="{{tabs}}" wx:key="*this">
        <view id="{{index}}" class="wechatNavItem {{activeIndex == index ? 'active' : ''}}" bindtap="tabClick">
          <view class="wechatNavTitle">{{item}}</view>
        </view>
      </block>
      <view class="wechatNavSlider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <view class="wechatTabPanel">
      <view class="wechatTabContent" hidden="{{activeIndex != 0}}">
        <map id="myMap" class='schoolMap' show-location controls='{{map.controls}}' />
        <button type="primary" bindtap="getCenterLocation">获取位置</button>
        <button type="primary" bindtap="moveToLocation">移动位置</button>
        <button type="primary" bindtap="translateMarker">移动标注</button>
        <button type="primary" bindtap="includePoints">缩放视野展示所有经纬度</button>
      </view>
      <view class="wechatTabContent" hidden="{{activeIndex != 1}}">选项二的内容</view>
      <view class="wechatTabContent" hidden="{{activeIndex != 2}}">选项三的内容</view>
    </view>
  </view>
</view>