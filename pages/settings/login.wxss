page {
  background-image: linear-gradient(to right, #43e97b 0%, #38f9d7 100%);
  /* background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%); */
}

.loginIcon {
  position: fixed;
  top: 20%;
  width: 120px;
  height: 120px;
}

.loginCtn {
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.inputBox {
  font-size: 16px;
  width: 60%;
  min-width: 60%;
  max-width: 80%;
  margin: 20px auto;
  border-radius: 10px;
  padding: 4px 15px;
  line-height: 1.6;
  background-image: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
  border: none;
}

.loginButton {
  color: #888;
  font-size: 16px;
  width: 60% !important;
  min-width: 60% !important;
  max-width: 80% !important;
  margin: 20px auto !important;
  padding: 4px 15px !important;
  line-height: 1.8;
  border-radius: 10px;
  background-image: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
}
