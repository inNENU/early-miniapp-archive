#schoolMap {
  width: 100%;
  height: 100%;
}

/* select 组件 */

.selectCtn {
  position: fixed;
  z-index: 96;
  left: 17px;
  bottom: 130px;

  background-color: #fff;
  border-radius: 0.4em;

  font-size: 14px;
  overflow: hidden;
}

.nm .selectCtn {
  background-color: #000;
}

.selectBtn {
  display: inline-block;
  padding: 5px;
  color: #3478f7;
  line-height: 1rem;
}

/* point 组件 */

.pointCtn {
  position: fixed;
  left: 17px;
  bottom: 90px;

  padding: 6px;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 5px;
}

.nm .pointCtn {
  background-color: #000;
  border: 1rpx solid #111;
}

.pointBtn {
  width: 25px;
  height: 25px;
}

/* scale 组件 */

.scaleLargeBtn,
.scaleSmallBtn {
  display: flex;
  position: fixed;
  right: 20px;

  width: 40px;
  height: 40px;
  padding-bottom: 1px;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: -1px 3px 5px #dbdadfd3;

  color: #888;
  font-size: 24px;
  justify-content: center;
  align-items: center;
}

.nm .scaleLargeBtn,
.nm .scaleSmallBtn {
  background-color: #444;
  box-shadow: -1px 3px 5px #4b4d47d3;
}

.scaleLargeBtn {
  bottom: 140px;
}

.scaleSmallBtn {
  bottom: 90px;
}

/*****************
      tab栏
*****************/

.tab {
  display: flex !important;
  position: fixed;
  z-index: 99;
  bottom: 0;

  width: 94%;
  min-height: 40px;
  max-height: 52px;
  padding: 5px 15px 5px 15px;
  padding: 5px 15px calc(env(safe-area-inset-bottom) / 2 + 5px) 15px;
  background-color: #fff;
  box-shadow: 0 -2px 5px rgba(219, 218, 223, 0.95);
  justify-content: space-between;
  align-items: center;
}

.nm .tab {
  background-color: #000;
  box-shadow: 0 -2px 5px rgba(45, 44, 49, 0.95);
}

/* switch组件 */

.switch {
  width: 130px;
  height: 35px;
  background-color: #fff;
  border: 1px solid #3478f7;
  border-radius: 5px;
}

.nm .switch {
  background-color: #000;
}

.switchItem {
  display: inline-block;

  width: 50%;
  height: 100%;

  color: #3478f7;
  line-height: 35px;
}

/* locate组件 */

.locateCtn {
  padding: 1px;
  border-radius: 3px;
}

.locateBtn {
  width: 28px;
  height: 28px;
}

/* list按钮 */

.listBtnCtn {
  padding: 2px 4px;
  background-color: #fff0;
  border-radius: 4px;
}

.listBtn {
  width: 25px;
  height: 25px;
}

.active {
  background-color: #3478f7;
  color: white;
}

/* list 组件 */
.listCtn {
  position: fixed;
  z-index: 98;
  top: 100%;

  width: 100%;
  height: 100%;
  background-color: #fff;
}

/*****************
    关闭按钮
*****************/

.closeBtn {
  position: fixed;
  z-index: 100;
  top: 26px;
  left: 9px;

  width: 31px;
  height: 31px;
  background-color: rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 18px;
}

.nm .closeBtn {
  background-color: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(0, 0, 0, 0.2);
}

.closeIcon {
  width: 24px;
  height: 24px;
  margin: 4px auto;
}
