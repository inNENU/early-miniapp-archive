/* ---NENU theme made by MrHope--- */

.NENU {
  width: 100%;
  min-height: 100%;
  color: var(--text-color);
  background-color: var(--bgcolor);
  font-family: "Helvetica Neue",
    FZSSJW,
    -apple-system-font,
    "PingFang SC",
    "Helvetica Neue",
    Helvetica,
    STHeiti,
    Tahoma,
    Simsun,
    sans-serif !important;
}

.NENU.grey {
  background-color: #f0f0f0;
}

.nm.NENU.grey {
  background-color: #0f0f0f;
}

/* NENU nav */
.NENUnav,
.NENUnav2 {
  width: 100%;
  position: fixed;
  display: flex;
  background-color: #5ab879;
  justify-content: center;
  align-items: center;
  color: #fff;
  z-index: 99;
}

.NENUnav {
  box-sizing: content-box;
  height: 40px;
  padding: 2px 0;
  border-bottom: 1rpx solid var(--bgcolor-grey);
  justify-content: flex-start;
}

.NENU-navText {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.NENUNavTitle {
  position: absolute;
  max-width: 60%;
  padding: 6.5px 9px;
  color: #fff;
  font-size: 18px;
  line-height: 1;
  background-color: rgba(0, 0, 0, 0.15);
  border-radius: 17px;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.NENUHead .backIcon {
  color: var(--text-color);
}

/* paragraph */
/* .NENUP, */
.NENUTitle,
.NENUhead {
  text-align: left;
}

.NENUTitle {
  font-size: 18px;
  min-height: 24px;
  font-weight: 500;
  padding: 9px 5% 3px 5%;
}

.NENUTitle+.NENUTitle {
  padding-top: 2px;
}

.NENUTitle+.NENUhead {
  padding-top: 5px;
}

.NENUhead {
  font-size: 17px;
  font-weight: 500;
  padding: 9px 5% 3px 5%;
}

.grey .NENUhead {
  font-size: 13px;
  min-height: 37px;
  padding: 23px 5% 5px 5%;
  color: #666;
}

.nm.grey .NENUhead {
  color: #999;
}

