.NENUInfoCtn {
  width: 100%;
  height: 600rpx;
  display: flex;
}

.NENUInfoHead {
  position: absolute;
  width: 100%;
  height: 280rpx;
}

.NENUnickCtn {
  position: absolute;
  margin: 100rpx auto auto 100rpx;
  display: flex;
}

.NENUnickHead {
  width: 180rpx;
  height: 180rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
}

.NENUnickname {
  font-size: 19px;
  color: #fff;
}

.NENULoginBtn {
  position: relative;
  width: 60%;
  height: 100rpx;
  top: 230rpx;
  border: 1rpx solid #ccc, 1rpx solid #fff;
  border-radius: 10px;
}
