/* ---NENU theme made by MrHope--- */

.NENU {
  width: 100%;
  min-height: 100%;
  background-color: var(--bgcolor);

  color: var(--text-color);
  font-family:
    'Helvetica Neue',
    FZSSJW,
    -apple-system-font,
    'PingFang SC',
    Helvetica,
    STHeiti,
    Tahoma,
    Simsun,
    sans-serif !important;
}

.NENU.grey {
  background-color: #f0f0f0;
}

.dark.NENU.grey {
  background-color: #0f0f0f;
}

/* NENU nav */
.NENUnav,
.NENUnav2 {
  display: flex;
  position: fixed;
  z-index: 99;

  width: 100%;
  background-color: #5ab879;

  color: #fff;
  justify-content: center;
  align-items: center;
}

.NENUnav {
  box-sizing: content-box;
  height: 40px;
  padding: 2px 0;
  border-bottom: 1rpx solid var(--bgcolor-grey);
  justify-content: flex-start;
}

.NENU-navText {
  position: absolute;

  width: 100%;

  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.NENUNavTitle {
  position: absolute;

  max-width: 60%;
  padding: 6.5px 9px;
  background-color: rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 17px;

  color: #fff;
  font-size: 18px;
  line-height: 1;
}

.NENUHead .backIcon {
  color: var(--text-color);
}

/* paragraph */

/* .NENUP, */
.NENUTitle,
.NENUhead {
  text-align: left;
}

.NENUTitle {
  min-height: 24px;
  padding: 9px 5% 3px 5%;
  font-size: 18px;
  font-weight: 500;
}

.NENUTitle + .NENUTitle {
  padding-top: 2px;
}

.NENUhead {
  padding: 9px 5% 3px 5%;
  font-size: 17px;
  font-weight: 500;
}

.NENUTitle + .NENUhead {
  padding-top: 5px;
}

.grey .NENUhead {
  min-height: 37px;
  padding: 23px 5% 5px 5%;
  color: var(--dark-grey);
  font-size: 13px;
}

.NENUInfoCtn {
  display: flex;
  width: 100%;
  height: 600rpx;
}

.NENUInfoHead {
  position: absolute;
  width: 100%;
  height: 280rpx;
}

.NENUnickCtn {
  display: flex;
  position: absolute;
  margin: 100rpx auto auto 100rpx;
}

.NENUnickHead {
  width: 180rpx;
  height: 180rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
}

.NENUnickname {
  color: #fff;
  font-size: 19px;
}

.NENULoginBtn {
  position: relative;
  top: 230rpx;

  width: 60%;
  height: 100rpx;
  border: 1rpx solid #ccc, 1rpx solid #fff;
  border-radius: 10px;
}
