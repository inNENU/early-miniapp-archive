/* animation */

.fadeIn,
.fadeOut {
  transition: opacity 0.8s !important;
}

.fadeIn {
  opacity: 1 !important;
}

.fadeOut {
  opacity: 0 !important;
}

.moveDownIn,
.moveDownOut,
.moveUpIn,
.moveUpOut {
  transition: all 0.8s !important;
}

.moveUpIn {
  transform: translateY(-100%);
}

.moveDownIn {
  transform: translateY(100%);
}
