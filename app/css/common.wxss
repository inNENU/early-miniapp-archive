/* 按钮点击样式 */
.button-hover {
  background-color: var(--hover) !important;
  opacity: 0.7 !important;
}

.access {
  padding-right: 15px;
  position: relative;
}

.access:after {
  content: " ";
  display: inline-block;
  width: 9px;
  height: 9px;
  border-width: 2px 2px 0 0;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -5px;
  right: 2px;
  border-color: var(--arrow-color);
}

/* donate */
.donateCtn {
  width: 100%;
  position: fixed;
  bottom: 20px;
}

.donateButton {
  width: 60%;
  margin: 0 auto;
  padding: 10px;
  text-align: center;
  line-height: 1.6;
  background-color: #09bb07;
  border: none;
  border-radius: 5px;
  color: #fff;
}
