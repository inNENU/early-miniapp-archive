/*****************
    常规背景
*****************/

.commonBg {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.nm.commonBg {
  background-color: #000;
}

/*****************
    背景蒙层
*****************/


.mask {
  background: rgba(0, 0, 0, .6)
}

.mask,
.mask_transparent {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0
}

/*****************
    加载中图标
*****************/

.commonLoading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loadingIconCtn {
  width: 100px;
  height: 125px;
  filter: drop-shadow(-1px 1px 2px rgba(191, 190, 195, 0.15));
}

.loadingIcon {
  width: 100px;
  height: 100px;
  position: relative;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
    top: 0px;
  }

  10% {
    transform: rotate(-7.2deg);
    top: -18rpx;
  }

  20% {
    transform: rotate(-28.8deg);
    top: -32rpx;
  }

  30% {
    transform: rotate(-64.8deg);
    top: -42rpx;
  }

  40% {
    transform: rotate(-115.2deg);
    top: -48rpx;
  }

  50% {
    transform: rotate(-180deg);
    top: -50rpx;
  }

  60% {
    transform: rotate(-244.8deg);
    top: -48rpx;
  }

  70% {
    transform: rotate(-295.2deg);
    top: -42rpx;
  }

  80% {
    transform: rotate(-331.2deg);
    top: -32rpx;
  }

  90% {
    transform: rotate(-352.8deg);
    top: -18rpx;
  }

  100% {
    transform: rotate(-360deg);
    top: 0px;
  }
}

.loading {
  animation: loading 2s linear 0s none infinite alternate-reverse;
}

.loadingText {
  color: #888;
  margin: 4px auto;
}

@media (min-width:480px) {
  .loadingText {
    font-size: 24px;
    margin: 12px auto;
  }
}

@keyframes shadow {

  0%,
  100% {
    transform: scaleX(1.4);
  }

  50% {
    transform: scaleX(1);
  }
}

.loadingShadow {
  width: 60px;
  height: 10px;
  margin: -10px 20px 0 20px;
  border-radius: 50%;
  background: rgba(191, 190, 195, 0.15);
  box-shadow: 0 0 5px rgba(191, 190, 195, 0.15);
  animation: shadow 2s ease 0s none infinite alternate-reverse;
}

/*****************
      Nav栏
*****************/

.navBackHover {
  opacity: 0.2;
}

/*****************
    返回按钮
*****************/

.backBtn {
  position: fixed;
  z-index: 99;
  top: 26px;
  left: 9px;
  width: 46px;
  height: 31px;
  border-radius: 18px;
  background-color: rgba(255, 255, 255, 0.5);
}

.backBtn:before {
  content: " ";
  position: absolute;
  z-index: 98;
  border: 1px solid rgba(127, 127, 127, 0.2);
  border-radius: 36px;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
}

.nm .backBtn {
  background-color: rgba(0, 0, 0, 0.15);
}

.nm .backBtn:before {
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.backIcon {
  width: 24px;
  height: 24px;
  margin: 4px auto;
}

/* error */

.errorCtn {
  padding: 20% 10%;
}

.errorText {
  color: red;
  font-size: 18px;
  margin: 10px 0;
}

.errorDesc {
  color: #888;
  font-size: 16px;
  text-align: justify !important;
}

/* 上下边框 */
.borderT,
.borderB,
.borderTB {
  position: relative;
}

.borderT:before,
.borderTB:before {
  top: 0;
  transform-origin: 0 0;
  border-top: 1px solid #acacb0;
}

.divline:after,
.borderB:after,
.borderTB:after {
  bottom: 0;
  transform-origin: 0 100%;
  border-bottom: 1px solid #acacb0;
}

.divline:after,
.borderT:before,
.borderB:after,
.borderTB:before,
.borderTB:after {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(0.4);
}

.nm .divline:after,
.nm .borderT:before,
.nm .borderB:after,
.nm .borderTB:before,
.nm .borderTB:after {
  border-color: #3D3D41;
}
