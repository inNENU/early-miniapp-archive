page>view {
  --text-color: #000;
  --bgcolor: #fff;
  --bgcolor-grey: #efeef4;
  --block-bgcolor: #fefefe;
  --border-color: #cac9ce;

  --grey: #888;
  --grey-three: #333;
  --grey-four: #444;
  --dark-grey: #666;
  --light-grey: #999;

  --arrow-color: #c7c7cc;
  --card-hover: rgba(191, 192, 195, 0.15);
}

page>view.light {
  --text-color: #000;
  --bgcolor: #fff;
  --bgcolor-grey: #efeef4;
  --block-bgcolor: #fefefe;
  --border-color: #cac9ce;

  --grey: #888;
  --grey-three: #333;
