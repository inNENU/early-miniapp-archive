/* 按钮点击样式 */
.button-hover {
  background-color: var(--hover) !important;
  color: inherit;
  opacity: 0.7 !important;
}

.access {
  position: relative;
  padding-right: 15px;
}

.access::after {
  content: " ";
  display: inline-block;
  position: absolute;
  top: 50%;
  right: 2px;

  width: 9px;
  height: 9px;
  margin-top: -5px;
  border-width: 2px 2px 0 0;
  border-style: solid;
  border-color: var(--arrow-color);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

/* donate */
.donateCtn {
  position: fixed;
  bottom: 20px;
  width: 100%;
}

.donateButton {
  width: 60%;
  margin: 0 auto;
  padding: 10px;
  background-color: #09bb07;
  border: none;
  border-radius: 5px;

  color: #fff;
  text-align: center;
  line-height: 1.6;
}
