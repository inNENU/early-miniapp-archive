/* STORMY */
.stormy {
  position: absolute;
  top: 20px;
  left: 90px;

  width: 50px;
  height: 50px;
  margin-left: -60px;
  background: #222;
  border-radius: 50%;
  box-shadow:
    #222 65px -15px 0 -5px,
    #222 25px -25px,
