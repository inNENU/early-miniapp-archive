.weather-wrapper {
  position: relative;

  width: calc(100% - 30px);
  max-width: 450px;
  margin: 16px 15px;
  padding: 10px 15px;
  border-radius: 15px;

  color: #fff;
  text-align: left;
  font-size: 16px;
}

.weather-wrapper .detail {
  text-align: right;
  font-size: 14px;
}

.temperature {
  padding-bottom: 8px;
  text-align: right;
}

.weather-wrapper .text {
  margin-left: 4px;
  text-align: right;
}

.weather-wrapper .loading {
  width: 60px;
  height: 60px;
  margin: 20px calc(50% - 60px);
}

/* 天气 */
.weather-pic {
  position: absolute !important;
  z-index: 999 !important;
  top: 20px !important;
  left: 100px !important;
}

.normal-bg {
  background-color: #0081ff;
}

.starry-bg {
  background-color: #223;
}

.stormy-bg {
  background-color: #444;
}

/* SUNNY */
.sunny {
  position: absolute;
  top: 20px;
  left: 90px;

  width: 20px;
  height: 140px;
  margin-top: -12px;
  margin-left: -8px;
  background: linear-gradient(to top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 100%);
  animation: sunny 15s linear infinite;
}

.sunny::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;

  width: 20px;
  height: 140px;
  background: linear-gradient(to top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 100%);
  opacity: 1;
  transform: rotate(90deg);
}

.sunny::after {
  content: '';
  position: absolute;
  top: 30px;
  left: -30px;

  width: 80px;
  height: 80px;
  background: #fe4;
  border-radius: 50%;
  box-shadow: rgba(255, 255, 0, 0.2) 0 0 0 15px;
}

@keyframes sunny {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* CLOUDY */
.cloudy {
  position: absolute;
  top: 70px;
  left: 255px;

  width: 50px;
  height: 50px;
  margin-left: -60px;
  background: #fff;
  border-radius: 50%;
  box-shadow:
    #fff 65px -15px 0 -5px,
    #fff 25px -25px,
    #fff 30px 10px,
    #fff 60px 15px 0 -10px,
    #fff 85px 5px 0 -5px;
  animation: cloudy 5s ease-in-out infinite;
}

.cloudy::after {
  content: '';
  position: absolute;
  left: 5px;
  bottom: -60px;

  width: 120px;
  height: 15px;
  background: #000;
  border-radius: 50%;
  opacity: 0.2;
  transform: scale(0.7);
  animation: cloudy_shadow 5s ease-in-out infinite;
}

@keyframes cloudy {
  50% {
    transform: translateY(-20px);
  }
}

@keyframes cloudy_shadow {
  50% {
    opacity: 0.05;
    transform: translateY(20px) scale(1);
  }
}

