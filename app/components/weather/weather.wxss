/* RAINBOW */
.rainbow {
  position: absolute;
  top: 71px;
  left: 610px;

  width: 70px;
  height: 70px;
  margin-left: -40px;
  border-radius: 170px 0 0 0;
  box-shadow:
    #fb323c -2px -2px 0 1px,
    #f99716 -4px -4px 0 3px,
    #fee124 -6px -6px 0 5px,
    #afdf2e -8px -8px 0 7px,
    #6ad7f8 -10px -10px 0 9px,
