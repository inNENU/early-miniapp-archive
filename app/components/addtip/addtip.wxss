.addtipBox {
  display: flex;
  position: fixed;
  z-index: 999;
  top: 0;
  right: 0;

  width: 300px;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}

.addtipBox .arrow {
  width: 0;
  height: 0;
  margin-right: 60px;
  border-width: 10px;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
}

.addtipBox .body {
  display: flex;

  height: 42px;
  margin-right: 20px;
  padding: 0 10px;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 0 4px 8px -2px rgba(95, 95, 95, 0.5);

  font-size: 14px;
  font-weight: 400;
  justify-content: center;
  align-items: center;
}

.addtipModal {
  display: flex;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  padding: 20px 10%;
  background: rgba(0, 0, 0, 0.6);

  color: #fff;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.addtipModal .item {
  width: 80vw;
  margin: 10px 0;
  text-align: left;
  line-height: 1.5;
}

.okBtn {
  display: block;

  width: 120px !important;
  margin-top: 40px;
  padding: 4px 0;
  background-color: #fff;
  border-radius: 40px;
  box-shadow: 0 4px 8px -2px rgba(95, 95, 95, 0.5);

  color: #000;
  text-align: center !important;
  font-size: 15px;
}
