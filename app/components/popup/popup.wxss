.popupCtn {
  position: absolute;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.popupCtn.show {
  visibility: visible;
  opacity: 1;
}

.popupCtn .popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 75%;
  z-index: 5000;
  line-height: 1.4;
  background-color: #fff;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  overflow: hidden;
  padding: 0 24px;
  padding: 0 calc(24px + constant(safe-area-inset-right)) constant(safe-area-inset-bottom) calc(24px + constant(safe-area-inset-left));
  padding: 0 calc(24px + env(safe-area-inset-right)) env(safe-area-inset-bottom) calc(24px + env(safe-area-inset-left));
  transition: all 0.3s;
  transform: translateY(100%);
}

.popupCtn.show .popup {
  transform: translateY(0);
}

.popupHead {
  font-size: 8px;
  height: 8em;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.popupHead .weui-icon-btn {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

.popupHead-Side {
  position: relative;
  left: -8px;
}

.popupHead-Main {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.popupHead-Side + .popupHead-Main {
  text-align: center;
  padding: 0 40px;
}

.popupHead-Main + .popupHead-Side {
  right: -8px;
  left: auto;
}

.popupHead-Main + .popupHead-Side .weui-icon-btn {
  right: 0;
}

.popupTitle {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-weight: 700;
  font-size: 15px;
}

.popupSubtitle {
  display: block;
  color: rgba(0, 0, 0, 0.5);
  font-size: 10px;
}

.popupBody {
  word-wrap: break-word;
  -webkit-hyphens: auto;
  hyphens: auto;
  overflow-y: auto;
}

.popupText {
  padding-top: 4px;
  font-size: 17px;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.4;
}

.popupDesc {
  padding-top: 16px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.3);
  line-height: 1.4;
}

.popupFoot {
  padding: 40px 24px 32px;
  text-align: center;
}

.popupFoot .weui-btn:nth-last-child(n+2),
.popupFoot .weui-btn:nth-last-child(n+2) + .weui-btn {
  display: inline-block;
  vertical-align: top;
  margin: 0 8px;
  width: 120px;
}
