.search-bar {
  display: flex;
  position: relative;

  padding: 8px;
  background-color: #ededed;

  color: var(--text-color);
  align-items: center;
}

.dark .search-bar {
  background-color: #000;
}

.search {
  width: 100%;
  background-color: #fff;
  border-radius: 4px;
  flex-shrink: 1;
}

.dark .search {
  background-color: #121212;
}

.search-box {
  position: relative;
  z-index: 1;
  width: 100%;
  padding: 0 32px;
}

.placeholder {
  display: flex;

  color: var(--grey);
  line-height: 32px;
  justify-content: center;
  align-items: center;
}

.search .icon {
  position: absolute;
  top: 50%;
  margin-top: -8px;
  margin-left: -20px;
}

.search .text {
  position: relative;
  padding-left: 24px;
  font-size: 14px;
}

.searchInput {
  height: 32px;
  margin-left: 4px;

  text-align: left;
  font-size: 14px;
  line-height: 32px;
}

.search .icon.input {
  left: 12px;
  margin-left: 0;
}

.search-bar .clear-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;

  padding: 0 12px;
}

.search-bar .clear {
  position: absolute;
  top: 50%;
  right: 12px;
  margin-top: -8px;
}

.search-bar .cancel {
  margin-left: 8px;
  color: #576b95;
  line-height: 32px;
  white-space: nowrap;
}

.search-bar .word-wrapper {
  position: absolute;
  z-index: 2;
  top: 40px;
  left: 8px;
  right: 46px;

  background-color: var(--bgcolor);
  border-radius: 4px;
  box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.15);
}

.search-bar .word {
  padding: 4px 32px;

  color: var(--grey-four);
  text-align: left;
  font-size: 15px;
  line-height: 1.5;
}
