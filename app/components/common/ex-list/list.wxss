.list-wrapper .picker .desc {
  position: absolute;
  top: 0;
  right: 15px;
  padding: 10px 0;
}

.pickerViewCtn {
  height: 160px;
}

.pick-view-column {
  min-width: 50px;
  flex: none;
}

.pick-view-column:first-child,
.pick-view-column:last-child {
  flex: 1;
}

.pickColumn {
  display: -webkit-flex;
  display: flex;
  padding: 0 8px;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 18px;
  flex: none;
}

.pick-view-column:first-child .pickColumn {
  text-align: right;
}

.pick-view-column:last-child .pickColumn {
  text-align: left;
}

.iOSpick-view-column:only-child .iOSpickColumn {
  text-align: center;
}

.nm .pickerViewCtn,
.nm .pick-view-column {
  background-color: #1c1c1e;
  color: #fff;
}

.sliderCtn {
  padding: 5px 15px;
}
