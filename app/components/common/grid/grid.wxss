/******************
      通用样式
 *****************/
.grid-head {
  min-height: 36px;
  padding: 12px 5% 4px 5%;

  color: var(--text-color);
  text-align: left;
  font-size: 19px;
  font-weight: 500;
}

.grey .grid-head {
  min-height: 37px;
  margin: 0 auto;
  padding: 23px 15px 5px 15px;

  color: var(--dark-grey);
  font-size: 13px;
}

@media (min-width: 768px) {
  .grid-head {
    min-height: 38px;
    font-size: 21px;
  }

  .grey .grid-head {
    margin: 0 15px;
  }
}

.grid-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.grid-foot {
  min-height: 14px;
  padding: 3px 15px;

  color: #999;
  text-align: left;
  font-size: 14px;
}

@import "Android.wxss";
@import "NENU.wxss";
@import "iOS.wxss";
@import "weui.wxss";
