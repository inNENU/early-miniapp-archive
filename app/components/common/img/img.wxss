.status-wrapper {
  width: 90%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 4px 5%;
  border-radius: 16rpx;
  color: var(--grey);
  background-color: var(--list-border-color);
}

.status-wrapper .loading {
  width: 60px;
  height: 60px;
  margin-bottom: 6px;
}

.img {
  width: 90%;
  margin: 4px auto;
  border-radius: 16rpx;
  max-width: 600px !important;
}

.img-desc {
  font-size: 12px;
  font-weight: 300;
  margin: -2px auto 4px;
  color: var(--grey-three);
  text-align: center;
}
