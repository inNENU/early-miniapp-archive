/* iOS */

.iOS .img {
  width: 90%;
  margin: 4px auto;
  border-radius: 16rpx;
  max-width: 600px !important;
}

.iOS .ImgError {
  width: 90%;
  height: 400rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 4px 5%;
  border-radius: 16rpx;
  background-color: #cac9ce;
  color: #888;
}

.iOS .imgDesc {
  font-size: 12px;
  font-weight: 300;
  margin-top: -2px;
  margin-bottom: 4px;
  text-align: center;
  color: #222;
}

.nm.iOS .imgDesc {
  color: #ddd;
}