.gzh {
  width: 90%;
  max-width: 517px;
  margin: 12px 5%;
  background-color: var(--block-bgcolor);
  border-radius: 8px;
  box-shadow: 1px 1px 2px 3px var(--card-shadow);

  text-align: left;
  overflow: hidden;
}

.gzh .img {
  width: 100%;
  height: 290rpx;
  max-height: 220px;
}

.gzh .detail {
  margin: 0;
  padding: 12px 5%;
}

.gzh .title {
  margin-bottom: 8px;
  font-size: 18px;
  font-weight: 400;
}

.gzh .desc {
  color: var(--dark-grey);
  font-size: 15px;
}

.gzh .icon {
  display: flex;
  float: right;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.gzh .logo {
  width: 36px;
  height: 36px;
}

.gzh .name {
  margin: 2px auto;
  color: var(--grey);
  font-size: 14px;
}

@media (min-width: 480px) {
  .gzh .title {
    margin-bottom: 10px;
    font-size: 20px;
    font-weight: 400;
  }

  .gzh .desc {
    font-size: 18px;
  }

  .gzh .logo {
    width: 40px;
    height: 40px;
  }

  .gzh .name {
    font-size: 16px;
  }
}
