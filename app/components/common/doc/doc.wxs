module.exports = {
  /**
   * 获得文档图标
   *
   * @param docName 文档名称
   */
  getIcon: function (docName) {
    if (!docName) return '';

    var docType = docName.split('.').pop();

    return (
      './icon/' +
      (docType === 'docx' || docType === 'doc'
        ? 'doc'
        : docType === 'pptx' || docType === 'ppt'
        ? 'ppt'
        : docType === 'xlsx' || docType === 'xls'
        ? 'xls'
        : docType === 'jpg' || docType === 'jpeg'
        ? 'jpg'
        : docType === 'mp4' ||
          docType === 'mov' ||
          docType === 'avi' ||
          docType === 'rmvb'
        ? 'video'
        : docType === 'pdf'
        ? 'pdf'
        : docType === 'png' || docType === 'gif'
        ? docType
        : 'document') +
      '.svg'
    );
  },

  /** 获得文档名称 */
  getName: function (docName) {
    return docName && docName.split('.').shift();
  }
};
