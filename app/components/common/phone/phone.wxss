.phone-wrapper {
  display: flex;

  padding: 0 15px;
  background-color: var(--block-bgcolor);

  color: var(--text-color);
  line-height: 2.5;
  align-items: center;
}

.phone-wrapper .phone-icon {
  width: 24px;
  height: 24px;
  margin-right: 15px;
}

.phone-wrapper .number {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
  flex: 1 1 auto;
}

.phone-wrapper .call {
  width: 32px;
  height: 32px;
  margin: 0 4px;
  border-radius: 12px;
}

.phone-wrapper .add {
  width: 28px;
  height: 28px;
  margin: 0 4px;
  border-radius: 12px;
}

.phone-wrapper .icon {
  width: 100%;
  height: 100%;
}
