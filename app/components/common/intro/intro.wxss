.intro-wrapper {
  position: relative;
  width: 100%;
  height: 380rpx;
  overflow: hidden;
}

.intro-wrapper .background {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
  opacity: 0.6;

  filter: blur(8px);
}

.intro-wrapper .intro {
  display: flex;
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.intro-wrapper .icon {
  width: 200rpx !important;
  height: 200rpx !important;
}

.intro-wrapper .name {
  margin: 8rpx 0;
  font-size: 36rpx;
  text-shadow: 0 0 1px var(--grey);
}

.intro-wrapper .desc {
  max-width: 80%;
  color: var(--grey-four);
  font-size: 28rpx;
}
