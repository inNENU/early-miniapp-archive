page {
  height: 100%;
  font-size: 30rpx;
  line-height: 1.4;
  font-family:
    -apple-system-font,
    "PingFang SC",
    "Helvetica Neue",
    Helvetica,
    STHeiti,
    Tahoma,
    sans-serif;
  text-align: center;
}

@media (min-width: 480px) {
  page {
    font-size: 20px;
  }
}

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
}
