#passwordMask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100%;
  z-index: 201;
  background-color: rgba(0, 0, 0, 0.1);
}

#passwordBox {
  width: 80%;
  height: 15%;
  position: fixed;
  top: 35%;
  left: 10%;
  border-radius: 16px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 20px;
  font-weight: 400;
  text-align: center;
  letter-spacing: 1px;
  z-index: 202;
}

.passwordHint {
  height: 26px;
  margin-bottom: 10px;
}

#passwordInput {
  line-height: 1.5;
  background-color: transparent;
  border: none;
  font-size: 26px;
  font-weight: 800;
  letter-spacing: 40px;
}
