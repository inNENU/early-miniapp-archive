.goodSwiper {
  width: 100%;
  height: 750rpx;
}

.itemImg {
  width: 100% !important;
  height: 100% !important;
}

.itemDetail {
  text-align: left;
  padding: 8px 5%;
  background-color: #fff;
}

.itemName {
  font-size: 18px;
}

.itemDesc {
  font-size: 14px;
  color: #f44;
}

.itemRMBLabal, .itemPriceTag {
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif !important;
  color: #f44;
  letter-spacing: -1px;
}

.itemRMBLabal {
  font-weight: 500;
}

.itemPriceTag {
  font-size: 32px;
}

.itemPriceFoot {
  color: #888;
}

.itemDetailList {
  width: 100%;
  text-align: left;
}

.itemDetailListItem {
  padding: 6px 5%;
  color: #888;
}

.itemPicHead {
  font-size: 14px;
  color: #888;
  margin: 4px auto;
}

.divLine6 {
  width: 100%;
  height: 6px;
  background-color: #f8f8f8;
}

.itemButtonCtn {
  color: white;
  font-size: 16px;
  border-radius: 20px;
  overflow: hidden;
}

.itemCart, .itemBuy {
  display: inline-block;
  padding: 10px 20px;
}

.itemCart {
  background-color: #ffa500;
}

.itemBuy {
  background-color: #f00;
}

.backgroundLayer {
  position: fixed;
  width: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 999;
  opacity: 0;
}

.screenLayer {
  text-align: left;
  position: fixed;
  width: 100%;
  z-index: 1000;
}

.addCartMenu {
  position: absolute;
  bottom: 0;
  width: 710rpx;
  margin-bottom: 0;
  margin-top: auto;
  background-color: #fff;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  padding: 10px 20rpx;
}

.closeBtn {
  position: absolute;
  top: 10px;
  right: 20px;
  width: 20px;
  height: 20px;
  border: 1rpx solid #888;
  border-radius: 10px;
}

.closeIcon {
  width: 12px;
  height: 12px;
  margin: 4px;
}

.addCartDetail {
}

.itemImgPreview {
  width: 250rpx;
  height: 250rpx;
  border-radius: 5px;
}

.addCartParameter {
  width: 400rpx;
  display: inline-block;
  padding: 20rpx;
}

.price {
  font-size: 18px;
  color: #f00;
}

.confirmBuy {
  text-align: center;
  font-size: 18px;
  font-weight: 500;
  margin: 10px 40rpx 0 40rpx;
  color: #fff;
  padding: 6px;
  border-radius: 20px;
  letter-spacing: 10px;
  background-color: #ffa500;
}

.buyNumCtn {
}

.cartHover {
  background-color: rgba(255, 165, 0, 0.5);
}

.buyHover {
  background-color: rgba(255, 0, 0, 0.5);
}

/*index.wxss*/

.mask-shadow {
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: 1s;
}

.mask-shadow-on {
  opacity: 0.3;
}

.mask-con {
  position: absolute;
  width: 100%;
  height: 300rpx;
  left: 0;
  bottom: -300rpx;
  transition: 1s;
  text-align: center;
  line-height: 300rpx;
  box-shadow: 0 1px 10px #aaa;
}

.mask-con-show {
  bottom: 0;
}
