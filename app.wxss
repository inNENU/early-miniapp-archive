@import "templates/wechat.wxss";
@import "templates/iOS.wxss";

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.4;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  text-align: center;
}

/* common Nav */

.navBackHover {
  opacity: 0.2;
}

/* common Image */

.loadingImg {
  width: 100%;
  max-width: 40px;
  vertical-align: center;
}

.imgError {
  width: 90%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px 5%;
}

/* footer */

.footer-container {
  background-color: #f4f4f4;
  text-align: center;
  font-size: 20rpx;
  font-weight: lighter;
  color: #888;
  /* color: #1aad19; */
}

.footer-container, .footerPlaceHolder {
  width: 100%;
  height: 60rpx;
}

.nm .footer-container {
  background-color: #0c0c0c;
  border-top: 1rpx #272727 solid;
}

.footNav {
  background-color: rgba(0, 0, 0, 0);
}

.foot-logo {
  width: 36rpx;
  height: 36rpx;
  display: block;
  margin: 0 auto;
}

/* common */

.grey {
  color: grey;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
  border-top: 1rpx #d9d9d9 solid;
}

.flexbox {
  width: 100%;
  display: -webkit-flex;
  display: flex;
}
