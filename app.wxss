@import "templates/common.wxss";
@import "templates/Android.wxss";
@import "templates/NENU.wxss";
@import "templates/iOS.wxss";

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.4;
  font-family: -apple-system-font,
                 "PingFang SC",
                 "Helvetica Neue",
                 Helvetica,
                 STHeiti,
                 Tahoma,
                 Simsun,
                 sans-serif;
  text-align: center;
}

@media (min-width:480px) {
  page {
    font-size: 20px;
  }
}

/* donate */

.donateCtn {
  width: 100%;
  position: fixed;
  bottom: 20px;
}

.donateButton {
  width: 60%;
  padding: 0;
  background-color: #09bb07;
  border: none;
  color: #fff;
}

/* common */

.buttonHover {
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.pressHover {
  background-color: #eee !important;
}

.divLine1 {
  width: 100%;
  height: 0px;
  border-bottom: 1rpx #cac9ce solid;
}

.Grey {
  color: grey;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
  border-top: 1rpx #d9d9d9 solid;
}

.flexbox {
  width: 100%;
  display: -webkit-flex;
  display: flex;
}

.hide {
  display: none;
}

/* animation */

.fadeIn, .fadeOut {
  -webkit-transition: opacity 0.8s !important;
  transition: opacity 0.8s !important;
}

.fadeIn {
  opacity: 1 !important;
}

.fadeOut {
  opacity: 0 !important;
}

.moveDownIn, moveDownOut, .moveUpIn, .moveUpOut {
  -webkit-transition: all 0.8s !important;
  transition: all 0.8s !important;
}

.moveUpIn {
  transform: translateY(-100%);
}

.moveDownIn {
  transform: translateY(100%);
}

@keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.rotate {
  -webkit-animation: 9.5s linear 0s normal none infinite rotate;
  animation: 9.5s linear 0s normal none infinite rotate;
}
