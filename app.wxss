/* common */

.buttonHover {
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.pressHover {
  background-color: #eee !important;
}

.divLine1 {
  width: 100%;
  height: 0px;
  border-bottom: 1rpx #cac9ce solid;
}

.grey {
  color: grey;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
  border-top: 1rpx #d9d9d9 solid;
}

.flexbox {
  width: 100%;
  display: -webkit-flex;
  display: flex;
}

.hide {
  display: none;
}

/* animation */

.fadeIn, .fadeOut {
  -webkit-transition: opacity 0.8s !important;
  transition: opacity 0.8s !important;
}

.fadeIn {
  opacity: 1 !important;
}

.fadeOut {
  opacity: 0 !important;
}

.moveDownIn, moveDownOut, .moveUpIn, .moveUpOut {
  -webkit-transition: all 0.8s !important;
  transition: all 0.8s !important;
}

.moveUpIn {
  transform: translateY(-100%);
}

.moveDownIn {
  transform: translateY(100%);
}
